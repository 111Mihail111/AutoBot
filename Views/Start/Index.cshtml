@model AutoBot.ViewModels.WebSitesVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Краны</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="~/Content/jquery/jquery.js"></script>
    <script src="~/Content/ajax/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Content/Scripts.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="col-12">
            <div id="Cranes">
                @{await Html.RenderPartialAsync("_Cranes", Model.Cranes);}
            </div>

            <div id="InternetService" class="mt-5">
                @{await Html.RenderPartialAsync("_InternetService", Model.InternetServices);}
            </div>

            <div id="InternetService" class="mt-5">
                @{await Html.RenderPartialAsync("_ManualStart", Model.InternetServices);}
            </div>

            <form class="row" style="margin-top:300px" asp-action="SaveAccounts" asp-controller="Start" method="post" enctype="multipart/form-data">
                <div class="col-4">
                    <div class="input-group mb-1">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="submit" id="inputGroupFileAddon03">Сохранить</button>
                        </div>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="fileAccounts" id="inputGroupFile03" aria-describedby="inputGroupFileAddon03">
                            <label class="custom-file-label" for="inputGroupFile03">Загрузите файл</label>
                        </div>
                    </div>
                    <h6>@ViewBag.Message</h6>
                </div>
            </form>
        </div>
    </div>

</body>
</html>